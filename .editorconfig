root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space

# Matches multiple files with brace expansion notation
[*.{js,es6,jsx,md}]
indent_style = space
indent_size = 2
